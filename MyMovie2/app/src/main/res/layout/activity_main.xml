<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:text="영화제목"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:ems="10"
        android:hint="영화제목"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ivPoster"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="140dp"
        android:text="검색"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvActor"
        app:layout_constraintEnd_toEndOf="@+id/etTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="53dp"
        android:layout_height="128dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="69dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/tvActor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitle"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvDirec"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:text="감독"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvRelease"
        app:layout_constraintStart_toStartOf="@+id/tvRelease" />

    <TextView
        android:id="@+id/tvRelease"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_marginBottom="9dp"
        android:text="개봉일"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvGener"
        app:layout_constraintStart_toStartOf="@+id/tvGener" />

    <TextView
        android:id="@+id/tvGener"
        android:layout_width="79dp"
        android:layout_height="32dp"
        android:layout_marginBottom="9dp"
        android:text="장르"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvActor"
        app:layout_constraintStart_toStartOf="@+id/tvActor" />

    <TextView
        android:id="@+id/tvActor"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="107dp"
        android:text="주연배우"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPlot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPoster"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

    <TextView
        android:id="@+id/tvPlot"
        android:layout_width="284dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="31dp"
        android:text="줄거리"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvActor" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:text="줄거리"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPlot"
        app:layout_constraintStart_toStartOf="@+id/tvPlot"
        app:layout_constraintTop_toBottomOf="@+id/ivPoster" />
</android.support.constraint.ConstraintLayout>